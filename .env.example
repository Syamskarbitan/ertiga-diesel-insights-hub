# GADIES - Ertiga Diesel Insights Hub Environment Variables

# App Configuration
VITE_APP_NAME="GADIES - Ertiga Diesel Insights"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="OBD-II Diagnostic Tool for Suzuki Ertiga Diesel"

# Development Settings
VITE_DEV_MODE=true
VITE_DEBUG_MODE=true
VITE_MOCK_OBD_DATA=false

# ELM327 Configuration
VITE_ELM327_TIMEOUT=5000
VITE_ELM327_RETRY_ATTEMPTS=3
VITE_ELM327_AUTO_RECONNECT=true

# Default ELM327 WiFi Settings
VITE_DEFAULT_WIFI_IP="192.168.0.10"
VITE_DEFAULT_WIFI_PORT=35000

# Data Collection Settings
VITE_DATA_COLLECTION_INTERVAL=1000
VITE_HISTORY_RETENTION_DAYS=30
VITE_MAX_CHART_POINTS=100

# Alert Thresholds (for Suzuki Ertiga Diesel)
VITE_ALERT_ENGINE_TEMP_HIGH=95
VITE_ALERT_ENGINE_TEMP_CRITICAL=105
VITE_ALERT_RPM_HIGH=4000
VITE_ALERT_SPEED_HIGH=120
VITE_ALERT_FUEL_PRESSURE_LOW=200
VITE_ALERT_BOOST_PRESSURE_HIGH=2.5

# Feature Flags
VITE_FEATURE_BLUETOOTH=true
VITE_FEATURE_WIFI=true
VITE_FEATURE_CHARTS=true
VITE_FEATURE_ALERTS=true
VITE_FEATURE_DATA_EXPORT=true
VITE_FEATURE_DARK_MODE=true

# API Configuration (if using external services)
VITE_API_BASE_URL=""
VITE_API_KEY=""

# Analytics (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=""

# Sentry Error Reporting (optional)
VITE_SENTRY_DSN=""
VITE_SENTRY_ENVIRONMENT="development"
